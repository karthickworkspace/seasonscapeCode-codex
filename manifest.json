
{
  "manifest_version": 3,
  "name": "Seasonscape",
  "description": "Add seasonal visual effects (snow, leaves, petals, storm, rain) to any webpage.",
  "version": "1.0",
  "permissions": ["scripting","storage","activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "web_accessible_resources": [{
    "resources": ["seasons/*.js"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
